# Database
DATABASE_URL="postgresql://user:password@localhost:5432/college_placement?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"

# Cloudinary (File Upload)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Resend (Email Service)
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="College Placement <noreply@yourcollege.edu>"

# App Config
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="College Placement Portal"
NODE_ENV="development"

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000"

# Optional: Redis (for rate limiting in production)
REDIS_URL="redis://localhost:6379"

# Security
ENABLE_SECURITY_HEADERS="false"
ENABLE_RATE_LIMITING="true"
