# Production Environment Variables

# Database (PostgreSQL - Neon, Supabase, or similar)
DATABASE_URL="postgresql://user:password@production-db.region.aws.neon.tech:5432/college_placement?sslmode=require"

# NextAuth
NEXTAUTH_URL="https://placement.yourcollege.edu"
NEXTAUTH_SECRET="production-secret-key-very-long-and-secure"

# Email Service (Resend)
RESEND_API_KEY="re_production_api_key"
EMAIL_FROM="College Placement <placement@yourcollege.edu>"

# Application
NEXT_PUBLIC_APP_URL="https://placement.yourcollege.edu"
NODE_ENV="production"

# File Upload (Cloudinary)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Redis (Upstash for rate limiting)
REDIS_URL="redis://default:password@production-redis.upstash.io:6379"

# CORS Origins
ALLOWED_ORIGINS="https://placement.yourcollege.edu,https://www.yourcollege.edu"

# Security Headers
ENABLE_SECURITY_HEADERS="true"

# Rate Limiting
ENABLE_RATE_LIMITING="true"

# Monitoring (Optional)
SENTRY_DSN="your_sentry_dsn"
