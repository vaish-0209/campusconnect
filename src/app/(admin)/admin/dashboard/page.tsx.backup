import { getServerSession } from "next-auth";
import { authOptions } from "@/lib/auth";
import { redirect } from "next/navigation";
import { prisma } from "@/lib/prisma";
import Link from "next/link";

export default async function AdminDashboard() {
  const session = await getServerSession(authOptions);

  if (!session || session.user.role !== "ADMIN") {
    redirect("/login");
  }

  // Get stats
  const [
    totalStudents,
    totalDrives,
    activeDrives,
    totalCompanies,
    totalApplications,
    recentApplications,
    upcomingDrives,
  ] = await Promise.all([
    prisma.student.count(),
    prisma.drive.count(),
    prisma.drive.count({ where: { isActive: true } }),
    prisma.company.count(),
    prisma.application.count(),
    prisma.application.findMany({
      take: 10,
      orderBy: { appliedAt: "desc" },
      include: {
        student: { select: { firstName: true, lastName: true, rollNo: true } },
        drive: {
          select: { title: true, company: { select: { name: true } } },
        },
      },
    }),
    prisma.drive.findMany({
      where: {
        isActive: true,
        registrationEnd: { gte: new Date() },
      },
      take: 5,
      orderBy: { registrationEnd: "asc" },
      include: {
        company: { select: { name: true, logo: true } },
        _count: { select: { applications: true } },
      },
    }),
  ]);

  // Get unique students with OFFER status
  const offeredApplications = await prisma.application.findMany({
    where: { status: "OFFER" },
    select: { studentId: true },
  });
  const placedStudents = new Set(offeredApplications.map(a => a.studentId)).size;

  const placementPercentage =
    totalStudents > 0
      ? Math.round((placedStudents / totalStudents) * 100)
      : 0;

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Navbar */}
      <nav className="bg-white shadow-sm">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between h-16 items-center">
            <div className="flex items-center space-x-8">
              <h1 className="text-xl font-bold text-gray-900">
                Campus<span className="text-blue-600">Connect</span>{" "}
                <span className="text-xs text-gray-500">Admin</span>
              </h1>
              <div className="hidden md:flex space-x-4">
                <Link
                  href="/admin/dashboard"
                  className="text-blue-600 font-medium"
                >
                  Dashboard
                </Link>
                <Link
                  href="/admin/students"
                  className="text-gray-600 hover:text-gray-900"
                >
                  Students
                </Link>
                <Link
                  href="/admin/companies"
                  className="text-gray-600 hover:text-gray-900"
                >
                  Companies
                </Link>
                <Link
                  href="/admin/drives"
                  className="text-gray-600 hover:text-gray-900"
                >
                  Drives
                </Link>
                <Link
                  href="/admin/analytics"
                  className="text-gray-600 hover:text-gray-900"
                >
                  Analytics
                </Link>
              </div>
            </div>
            <div className="flex items-center space-x-4">
              <span className="text-sm text-gray-600">{session.user.email}</span>
              <form action="/api/auth/signout" method="POST">
                <button
                  type="submit"
                  className="text-sm text-gray-600 hover:text-gray-900"
                >
                  Logout
                </button>
              </form>
            </div>
          </div>
        </div>
      </nav>

      {/* Content */}
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div className="mb-8">
          <h2 className="text-3xl font-bold text-gray-900">
            Admin Dashboard üìä
          </h2>
          <p className="text-gray-600 mt-2">
            Manage placements and track performance
          </p>
        </div>

        {/* Quick Stats */}
        <div className="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
          <div className="bg-white rounded-lg shadow p-6">
            <div className="text-sm text-gray-600 mb-1">Total Students</div>
            <div className="text-3xl font-bold text-gray-900">
              {totalStudents}
            </div>
          </div>
          <div className="bg-white rounded-lg shadow p-6">
            <div className="text-sm text-gray-600 mb-1">Active Drives</div>
            <div className="text-3xl font-bold text-blue-600">
              {activeDrives}
            </div>
            <div className="text-xs text-gray-500 mt-1">
              {totalDrives} total
            </div>
          </div>
          <div className="bg-white rounded-lg shadow p-6">
            <div className="text-sm text-gray-600 mb-1">Companies</div>
            <div className="text-3xl font-bold text-purple-600">
              {totalCompanies}
            </div>
          </div>
          <div className="bg-white rounded-lg shadow p-6">
            <div className="text-sm text-gray-600 mb-1">Applications</div>
            <div className="text-3xl font-bold text-orange-600">
              {totalApplications}
            </div>
          </div>
          <div className="bg-white rounded-lg shadow p-6">
            <div className="text-sm text-gray-600 mb-1">Placement %</div>
            <div className="text-3xl font-bold text-green-600">
              {placementPercentage}%
            </div>
            <div className="text-xs text-gray-500 mt-1">
              {placedStudents} placed
            </div>
          </div>
        </div>

        {/* Quick Actions */}
        <div className="bg-white rounded-lg shadow p-6 mb-8">
          <h3 className="text-lg font-semibold mb-4">Quick Actions</h3>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            <Link
              href="/admin/students/import"
              className="p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 transition-colors"
            >
              <div className="text-2xl mb-2">üë•</div>
              <div className="font-medium">Import Students</div>
              <div className="text-sm text-gray-600">Upload CSV file</div>
            </Link>
            <Link
              href="/admin/drives/new"
              className="p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 transition-colors"
            >
              <div className="text-2xl mb-2">üè¢</div>
              <div className="font-medium">Create Drive</div>
              <div className="text-sm text-gray-600">Add new placement drive</div>
            </Link>
            <Link
              href="/admin/analytics"
              className="p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 transition-colors"
            >
              <div className="text-2xl mb-2">üìä</div>
              <div className="font-medium">View Analytics</div>
              <div className="text-sm text-gray-600">Placement statistics</div>
            </Link>
          </div>
        </div>

        {/* Dashboard Grid */}
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {/* Recent Applications */}
          <div className="bg-white rounded-lg shadow p-6">
            <h3 className="text-lg font-semibold mb-4">Recent Applications</h3>
            {recentApplications.length === 0 ? (
              <div className="text-center py-8 text-gray-500">
                <p>No applications yet</p>
              </div>
            ) : (
              <div className="space-y-3">
                {recentApplications.map((app) => (
                  <div
                    key={app.id}
                    className="flex justify-between items-center p-3 bg-gray-50 rounded-lg"
                  >
                    <div>
                      <div className="font-medium text-sm text-gray-900">
                        {app.student.firstName} {app.student.lastName}
                      </div>
                      <div className="text-xs text-gray-600">
                        {app.student.rollNo} ‚Üí {app.drive.company.name}
                      </div>
                    </div>
                    <div className="text-xs text-gray-500">
                      {new Date(app.appliedAt).toLocaleDateString()}
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>

          {/* Upcoming Drives */}
          <div className="bg-white rounded-lg shadow p-6">
            <div className="flex justify-between items-center mb-4">
              <h3 className="text-lg font-semibold">Upcoming Drives</h3>
              <Link
                href="/admin/drives"
                className="text-sm text-blue-600 hover:underline"
              >
                View All
              </Link>
            </div>
            {upcomingDrives.length === 0 ? (
              <div className="text-center py-8 text-gray-500">
                <p>No upcoming drives</p>
              </div>
            ) : (
              <div className="space-y-3">
                {upcomingDrives.map((drive) => (
                  <Link
                    key={drive.id}
                    href={`/admin/drives/${drive.id}`}
                    className="flex justify-between items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
                  >
                    <div className="flex items-center space-x-3">
                      {drive.company.logo ? (
                        <img
                          src={drive.company.logo}
                          alt={drive.company.name}
                          className="w-10 h-10 rounded"
                        />
                      ) : (
                        <div className="w-10 h-10 bg-gray-200 rounded flex items-center justify-center text-gray-500">
                          {drive.company.name[0]}
                        </div>
                      )}
                      <div>
                        <div className="font-medium text-sm text-gray-900">
                          {drive.company.name}
                        </div>
                        <div className="text-xs text-gray-600">
                          {drive.title}
                        </div>
                      </div>
                    </div>
                    <div className="text-right">
                      <div className="text-xs text-gray-600">
                        {drive._count.applications} applications
                      </div>
                      <div className="text-xs text-gray-500">
                        Closes:{" "}
                        {new Date(drive.registrationEnd).toLocaleDateString()}
                      </div>
                    </div>
                  </Link>
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
}
